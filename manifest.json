{
    "manifest_version": 3,
    "name": "Display datetime on SoundCloud posts",
    "version": "0.1",
    "description": "Description of my extension",
    "permissions": ["activeTab"],
    "icons": {
        "48": "icons/icon.png"
    },
    "content_scripts": [{
        "matches": ["https://soundcloud.com/*"],
        "js": ["js/content.js"]
    }],
    "action": {
        "default_icon": {
            "48": "icons/icon.png"
        },
        "default_title": "My Extension"
    }
}